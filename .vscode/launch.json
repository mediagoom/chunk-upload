    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Launch Program",
            "program": "${workspaceFolder}\\bin\\index.js"
        }
        
        ,{
            "type": "node",
            "request": "launch",
            "name": "Mocha Current File",
            "program": "${workspaceFolder}/node_modules/mocha/bin/_mocha",
            "args": [
                "--timeout",
                "999999",
                "--colors",
                "${file}"
            ],
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen"
        }
    
        
        
          , {
            "name": "Debug Rollup",
            "type": "node",
            "request": "launch",
            "program": "${workspaceRoot}/node_modules/rollup/bin/rollup",
            "stopOnEntry": false,
            "args": ["-c"],
            "cwd": "${workspaceRoot}",
            "preLaunchTask": null,
            "console": "integratedTerminal"
            , "runtimeArgs": [
                "--preserve-symlinks"
            ]        
            
            , "env": {
                "NODE_ENV": "development"
                , "DEBUG" : ""
            }
            
        }
        
    ]
}